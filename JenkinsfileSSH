pipeline{
    agent any
    environment{
        DOCKER_TAG = getDockerTag()
    }
    stages{

        stage('Check Agent') {
            steps {
                script {
                    echo "Running on agent: ${env.NODE_NAME}"
                }
            }
        }
        stage("Build Docker Image"){
            steps{
                sh "docker build -t shaikhdocker/nodeapp:${DOCKER_TAG} ."
            }
        }
    }
}
def getDockerTag(){
    def tag = sh script: 'git rev-parse HEAD', returnStdout: true
    return tag
}