pipeline {
    agent any
    
    environment {
        DOCKER_TAG = getDockerTag()
    }
    
    stages {
        stage('Check Agent') {
            steps {
                script {
                    echo "Running on agent: ${env.NODE_NAME}"
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image with tag: ${env.DOCKER_TAG}"
                    sh "docker build -t shaikhdocker/nodeapp:${env.DOCKER_TAG} ."
                }
            }
        }
    }
}

// Function to get the Docker tag from the latest Git commit
def getDockerTag() {
    def tag = sh(script: 'git rev-parse HEAD', returnStdout: true).trim()
    return tag
}
